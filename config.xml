<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lyonbros.turtl" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Turtl</name>
    <description>
		The safe way to remember everything.
    </description>
    <author email="info@turtl.it" href="http://cordova.io">
		Lyon Bros. Enterprises, LLC
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" />
        <icon src="www/app/images/favicon.128.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/app/images/favicon.128.png" />
    </platform>
    <engine name="android" spec="4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^1.2.0" />
</widget>
